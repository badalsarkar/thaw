document {
    width: 210mm;
    height: 297mm;

    margin-top: 20mm;
    margin-bottom: 20mm;
    margin-left: 20mm;
    margin-right: 20mm;

    background-color: #FFFFFF;

    font-family: Cambria;
    inline-code-font-family: Consolas;
    font-size: 11pt;
    font-kerning: native;
    color: rgb(0.1, 0.1, 0.1);

    line-height: 1.4;
}

page {
    footer: footer;
}

code {
    font-family: Consolas;
}

title {
    font-family: Segoe UI;
    color: rgb(0.4, 0.5, 0.6);
    font-size: 40pt;
    font-kerning: optical;

    text-align: center;

    margin-bottom: 25mm;
}

h {
    font-family: Segoe UI;
    font-variant: plain;
}

h1 {
    font-size: 16pt;
}

h2 {
    font-size: 14pt;
}

image {
    margin-left: 20mm;
}

toc {
    font-family: Segoe UI;
    line-height: 20pt;
}
